---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="TechBlog - Home" description="A minimal tech blog built with Astro">
  <section class="mb-12">
    <h1 class="text-4xl font-bold mb-4" style="color: var(--color-text);">
      Welcome to TechBlog
    </h1>
    <p class="text-lg" style="color: var(--color-text-secondary);">
      A minimal tech blog sharing thoughts on web development, programming, and technology.
    </p>
  </section>

  <section>
    <h2 class="text-2xl font-bold mb-6" style="color: var(--color-text);">
      Recent Posts
    </h2>

    {posts.length === 0 ? (
      <p style="color: var(--color-text-secondary);">
        No posts yet. Check back soon!
      </p>
    ) : (
      <div class="grid gap-8 md:grid-cols-2">
        {posts.map((post) => (
          <PostCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            slug={post.id}
            tags={post.data.tags}
            heroImage={post.data.heroImage}
          />
        ))}
      </div>
    )}
  </section>
</BaseLayout>
