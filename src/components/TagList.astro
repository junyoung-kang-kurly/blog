---
interface Props {
  tags: string[];
  size?: 'sm' | 'md';
}

const { tags, size = 'sm' } = Astro.props;

const sizeClasses = {
  sm: 'text-xs px-2 py-0.5',
  md: 'text-sm px-3 py-1',
};
---

<div class="flex flex-wrap gap-2">
  {tags.map((tag) => (
    <a
      href={`/tags/${tag}`}
      class={`rounded-full border border-[var(--color-border)] hover:bg-[var(--color-accent)] hover:text-white hover:border-[var(--color-accent)] transition-colors ${sizeClasses[size]}`}
      style="color: var(--color-text-secondary);"
    >
      #{tag}
    </a>
  ))}
</div>
